.wrap {
    width: 320rpx;
    background: #ffffff;
    background: linear-gradient(45deg, transparent 20rpx, #ffffff 20rpx);
    height: 480rpx;
    color: rgba(0,0,0,.5);
}
.header {
    display: flex;
    justify-content: space-between;
    padding: 8px 15px;
    align-items: center;
}

.category {
    background: #eeeeee;
    padding: 4px 6px;
    font-size: 26rpx;
    border-radius: 2px;
}

.article {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.movie-img,
.music-img {
    height: 120px;
}
.movie-img {
    width: 100%;
    background-color: #fff8c1;
}
.music-img {
    width: 120px;
    border-radius: 50%;
    overflow: hidden;
}
.article > view {
    padding: 20px;
    font-size: 24rpx;
}
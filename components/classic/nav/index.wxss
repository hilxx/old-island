.wrap {
    display: flex;
    flex-direction: row;
    width: 600rpx;
    justify-content: space-between;
    align-items: flex-end;
    background-color: #eee;
    border-radius: 3px;
}

.wrap image,
.wrap view {
    line-height: 80rpx;
    height: 80rpx;
}
.wrap image {
    width: 80rpx;
}

.title {
    text-align: center;
    color: rgba(0,0,0,.7);
    width: 100%;
    font-size: 24rpx;
    text-shadow: 0 1px 1px rgba(0,0,0,.2);
}
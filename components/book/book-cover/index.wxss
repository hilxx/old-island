.wrap {
    position: relative;
    height: min-content;
    width: 240rpx;
    border-radius: 3px;
    overflow: hidden;
    box-shadow: 3rpx 3rpx 6rpx -3rpx black;
}
image {
    width: 100%;
    height: 350rpx;
    background-color: #fff8c1;
    vertical-align: bottom;
}
.information,
.backdrop {
    position: absolute;
    padding: 5px;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    width: 100%;
}
.backdrop {
    background:  bottom / cover fixed;
    content: '';
    filter: blur(20px);
    margin: -30px;
}
.information {
    text-shadow: 0 0.03em 0.03em rgba(0,0,0,.1);
    background-color: hsla(0,0%,100%,.5);
}
.information > view {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.information>view:nth-child(1) {
    font-size: 26rpx;
}
.information>view:nth-child(2) {
    color: #494949;
    font-size: 22rpx;
}
.information>view:nth-child(3) {
    font-size: 20rpx;
    position: absolute;
    bottom: 0;
    right: 3px;
}

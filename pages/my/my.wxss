.article {
    width: max-content;
    height: max-content;
    border-radius: 50%;
    overflow: hidden;
    border: 0;
    padding: 0;
}

.wrap,
.header {
    width: 100vw;
}
.header {
    background-color: hsla(0,0%,100%,.8);
    position: relative;
}
.user {
    position: relative;
}
.user > image {
    width: 100%;
    height: 300px;
}

.user-info {
    position: absolute;
    top: 56%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

.user-info-out button {
    font-size: 14px;
    line-height: 60px;
    color: rgba(0,0,0,.4);
    background-color: #dddddd;
}

.user-info-out button,
.user-img {
    width: 60px;
    height: 60px;
    vertical-align: bottom;
}

.about {
    position: absolute;
    margin: 0 auto;
    bottom: 20px;
    padding: 0 60px;
    width: inherit;
    display: flex;
    justify-content: space-between;
}
.about-us,
.about-book {
    display: flex;
    flex-direction: column;
    text-align: center;
}


.like-classic {
    background-color: #efefef;
}

.like-text > image {
    width: 70px;
    height: 30px;
}

.books {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}
.book-item {
    margin: 5px 0;
}

.wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.search {
    width: 80vw;
    height: 60rpx;
    margin: 20px 30px;
    padding: 0 20px;
    line-height: 60rpx;
    background-color: #efefef;
    border-radius: 20px;
    outline: none;
    color: rgba(0,0,0,.2);
}
.books {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    background-color: #eee;
}
.book {
    margin: 10px 30px;
}